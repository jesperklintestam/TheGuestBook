@{
    ViewData["Title"] = "Start";
}

<div class="container m-lg text-center vertical-center">
    <h2>
        Welcome to this very simple guest book!
    </h2>
    @if (!User.Identity.IsAuthenticated)
    {
        <span>
            Please log in to read and post messages.
        </span>
        <partial name="_LoginPartial" />
    }
    else
    {
        <h3>
            <a asp-area="" asp-controller="Messages" asp-action="Index">Open Guest Book</a>
        </h3>
    }
</div>
